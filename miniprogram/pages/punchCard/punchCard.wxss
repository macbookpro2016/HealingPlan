.punchCard-container {
  padding: 20rpx;
}

.create-punch {
  display: flex;
  margin-bottom: 20rpx;
}

.create-punch input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx 0 0 10rpx;
  box-sizing: border-box;
}

.create-punch button {
  padding: 8rpx 16rpx; /* 减少内边距 */
  background-color: #4caf50;
  color: white;
  border: none;
  border-radius: 0 10rpx 10rpx 0;
  font-size: 28rpx; /* 调整字体大小 */
}

.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.suggestion-item {
  padding: 8rpx 16rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.punch-list {
  margin-bottom: 20rpx;
}

.punch-item {
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}

.punch-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  transition: transform 0.3s ease;
}

.checked-times {
  color: #999;
  font-size: 24rpx;
}

.punch-item button {
  padding: 8rpx 16rpx;
  background-color: #2196f3;
  color: white;
  border: none;
  border-radius: 10rpx;
}

.delete-btn {
  position: absolute;
  right: -100px;
  top: 0;
  width: 100px;
  height: 100%;
  background-color: #f44336;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: right 0.3s ease;
}

.punch-item.slide .punch-content {
  transform: translateX(-100px);
}

.punch-item.slide .delete-btn {
  right: 0;
}

.reward {
  margin-top: 20rpx;
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  text-align: center;
}

.reward image {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx auto;
}