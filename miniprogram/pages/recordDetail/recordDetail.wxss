.container {
  height: 100vh;
  background-color: #f9f9f9;
  padding: 40rpx;
  box-sizing: border-box;
}

.back-button {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 30rpx;
}

.back-button image {
  width: 100%;
  height: 100%;
}

.detail-content-wrapper {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.detail-content {
  /* 富文本内容样式 */
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.detail-content rich-text img {
  max-width: 100%;
  height: auto;
  margin: 10rpx 0;
}

.date-wrapper {
  display: flex;
  justify-content: flex-end;
}

.detail-date {
  font-size: 24rpx;
  color: #999;
}